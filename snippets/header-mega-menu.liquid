{% comment %}
  Renders a Nike-style megamenu for the header.
  Features: Full-width dropdown, category images, bold typography

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<nav class="header__inline-menu sport-nav">
  <ul class="list-menu list-menu--inline sport-nav__list" role="list">
    {%- for link in section.settings.menu.links -%}
      <li class="sport-nav__item">
        {%- if link.links != blank -%}
          <header-menu>
            <details id="Details-HeaderMenu-{{ forloop.index }}" class="mega-menu sport-mega">
              <summary
                id="HeaderMenu-{{ link.handle }}"
                class="header__menu-item list-menu__item link focus-inset sport-nav__link"
              >
                <span
                  {%- if link.child_active %}
                    class="header__active-menu-item"
                  {% endif %}
                >
                  {{- link.title | escape -}}
                </span>
                <i class="fa-solid fa-chevron-down sport-nav__caret"></i>
              </summary>
              <div
                id="MegaMenu-Content-{{ forloop.index }}"
                class="mega-menu__content sport-mega__content"
                tabindex="-1"
              >
                <div class="sport-mega__inner page-width">
                  <div class="sport-mega__grid">
                    {%- for childlink in link.links -%}
                      <div class="sport-mega__column">
                        <a
                          id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                          href="{{ childlink.url }}"
                          class="sport-mega__category-title{% if childlink.current %} sport-mega__category-title--active{% endif %}"
                          {% if childlink.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          {{ childlink.title | escape }}
                        </a>
                        {%- if childlink.links != blank -%}
                          <ul class="sport-mega__links list-unstyled" role="list">
                            {%- for grandchildlink in childlink.links -%}
                              <li>
                                <a
                                  id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                  href="{{ grandchildlink.url }}"
                                  class="sport-mega__link{% if grandchildlink.current %} sport-mega__link--active{% endif %}"
                                  {% if grandchildlink.current %}
                                    aria-current="page"
                                  {% endif %}
                                >
                                  {{ grandchildlink.title | escape }}
                                </a>
                              </li>
                            {%- endfor -%}
                          </ul>
                        {%- endif -%}
                      </div>
                    {%- endfor -%}

                    {%- comment %} Featured category tile with image {%- endcomment %}
                    <div class="sport-mega__featured">
                      <a href="{{ link.url }}" class="sport-mega__featured-tile">
                        <div class="sport-mega__featured-overlay"></div>
                        <span class="sport-mega__featured-label">Shop All {{ link.title }}</span>
                        <i class="fa-solid fa-arrow-right sport-mega__featured-arrow"></i>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </details>
          </header-menu>
        {%- else -%}
          <a
            id="HeaderMenu-{{ link.handle }}"
            href="{{ link.url }}"
            class="header__menu-item list-menu__item link link--text focus-inset sport-nav__link"
            {% if link.current %}
              aria-current="page"
            {% endif %}
          >
            <span
              {%- if link.current %}
                class="header__active-menu-item"
              {% endif %}
            >
              {{- link.title | escape -}}
            </span>
          </a>
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
</nav>

<style>
  /* Sport Navigation Styles */
  .sport-nav__list {
    gap: 0.5rem;
  }

  .sport-nav__link {
    color: #2d2d2d !important;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 500;
    font-size: 1.3rem;
    padding: 1rem 1.4rem !important;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    transition: color 0.2s ease;
  }

  .sport-nav__link:hover {
    color: #d4a5a5 !important;
  }

  .sport-nav__link::after {
    content: '';
    position: absolute;
    bottom: 0.5rem;
    left: 1.4rem;
    right: 1.4rem;
    height: 2px;
    background: #d4a5a5;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .sport-nav__link:hover::after,
  .sport-nav__link[aria-expanded='true']::after {
    transform: scaleX(1);
  }

  .sport-nav__caret {
    font-size: 1rem;
    transition: transform 0.3s ease;
    margin-left: 0.3rem;
  }

  .sport-nav__link[aria-expanded='true'] .sport-nav__caret {
    transform: rotate(180deg);
  }

  /* Mega Menu Content */
  .sport-mega__content {
    position: absolute;
    left: 0;
    right: 0;
    top: 100%;
    background: #ffffff !important;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    padding: 3rem 0;
    animation: sportSlideDown 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: 100;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
  }

  @keyframes sportSlideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .sport-mega__inner {
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .sport-mega__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)) 280px;
    gap: 3rem;
  }

  .sport-mega__column {
    display: flex;
    flex-direction: column;
  }

  .sport-mega__category-title {
    color: #2d2d2d;
    font-size: 1.4rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    transition: color 0.2s ease;
  }

  .sport-mega__category-title:hover {
    color: #d4a5a5;
  }

  .sport-mega__links {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .sport-mega__link {
    color: #888888;
    font-size: 1.3rem;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.4rem 0;
    transition: color 0.2s ease;
  }

  .sport-mega__link:hover {
    color: #d4a5a5;
  }

  /* Featured Tile */
  .sport-mega__featured {
    display: flex;
    align-items: stretch;
  }

  .sport-mega__featured-tile {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.5rem;
    background: linear-gradient(135deg, #f5e6e6 0%, #e8d4d4 100%);
    color: #2d2d2d;
    text-decoration: none;
    overflow: hidden;
    width: 100%;
    min-height: 200px;
    transition: transform 0.3s ease;
    border-radius: 12px;
  }

  .sport-mega__featured-tile:hover {
    transform: scale(1.02);
  }

  .sport-mega__featured-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(212, 165, 165, 0.3) 0%, transparent 60%);
  }

  .sport-mega__featured-label {
    position: relative;
    z-index: 1;
    font-family: var(--font-heading-family);
    font-size: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    line-height: 1.1;
    margin-bottom: 0.5rem;
    color: #2d2d2d;
  }

  .sport-mega__featured-arrow {
    position: relative;
    z-index: 1;
    font-size: 1.8rem;
    transition: transform 0.3s ease;
    color: #2d2d2d;
  }

  .sport-mega__featured-tile:hover .sport-mega__featured-arrow {
    transform: translateX(6px);
  }

  @media screen and (max-width: 989px) {
    .sport-mega__grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .sport-mega__featured {
      grid-column: span 2;
    }
  }
</style>
