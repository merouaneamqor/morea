{% doc %}
  Features Showcase Block

  A conversion-optimized section highlighting key benefits
  and features with icons, animations, and compelling copy.
{% enddoc %}

{% assign features_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .features-showcase-{{ features_id }} {
    background: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 20px;
    position: relative;
    overflow: hidden;
  }

  {% if block.settings.background_pattern %}
    .features-showcase-{{ features_id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: radial-gradient(circle at 25% 25%, {{ block.settings.pattern_color }} 2px, transparent 2px), radial-gradient(circle at 75% 75%, {{ block.settings.pattern_color }} 2px, transparent 2px);
      background-size: 40px 40px;
      opacity: 0.05;
      z-index: 1;
    }
  {% endif %}

  .features-container-{{ features_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .features-header-{{ features_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.section_spacing }}px;
  }

  .features-title-{{ features_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    line-height: 1.3;
  }

  .features-subtitle-{{ features_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.5;
    max-width: 700px;
    margin: 0 auto;
  }

  .features-grid-{{ features_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.section_spacing }}px;
  }

  .feature-item-{{ features_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .feature-item-{{ features_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, {{ block.settings.card_gradient_start }}, {{ block.settings.card_gradient_end }});
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  {% if block.settings.card_hover_gradient %}
    .feature-item-{{ features_id }}:hover::before {
      opacity: 0.1;
    }
  {% endif %}

  .feature-item-{{ features_id }}:hover {
    transform: translateY(-{{ block.settings.card_hover_lift }}px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.1);
  }

  .feature-content-{{ features_id }} {
    position: relative;
    z-index: 2;
  }

  .feature-icon-container-{{ features_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.content_spacing }}px;
    background: {{ block.settings.icon_background }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .feature-icon-container-{{ features_id }}::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: {{ block.settings.icon_hover_background }};
    border-radius: 50%;
    transition: all 0.4s ease;
    transform: translate(-50%, -50%);
    z-index: 1;
  }

  .feature-item-{{ features_id }}:hover .feature-icon-container-{{ features_id }}::before {
    width: {{ block.settings.icon_size | times: 2 }}px;
    height: {{ block.settings.icon_size | times: 2 }}px;
  }

  .feature-icon-{{ features_id }} {
    width: {{ block.settings.icon_size | times: 0.5 }}px;
    height: {{ block.settings.icon_size | times: 0.5 }}px;
    color: {{ block.settings.icon_color }};
    transition: all 0.3s ease;
    z-index: 2;
    position: relative;
  }

  .feature-item-{{ features_id }}:hover .feature-icon-{{ features_id }} {
    transform: scale(1.1);
    {% if block.settings.icon_hover_color != blank %}
      color: {{ block.settings.icon_hover_color }};
    {% endif %}
  }

  .feature-title-{{ features_id }} {
    font-size: {{ block.settings.feature_title_size }}px;
    font-weight: {{ block.settings.feature_title_weight }};
    color: {{ block.settings.feature_title_color }};
    margin: 0 0 {{ block.settings.content_spacing | times: 0.5 }}px 0;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .feature-item-{{ features_id }}:hover .feature-title-{{ features_id }} {
    {% if block.settings.feature_title_hover_color != blank %}
      color: {{ block.settings.feature_title_hover_color }};
    {% endif %}
  }

  .feature-description-{{ features_id }} {
    font-size: {{ block.settings.feature_description_size }}px;
    color: {{ block.settings.feature_description_color }};
    line-height: 1.6;
    margin: 0;
    transition: color 0.3s ease;
  }

  .feature-item-{{ features_id }}:hover .feature-description-{{ features_id }} {
    {% if block.settings.feature_description_hover_color != blank %}
      color: {{ block.settings.feature_description_hover_color }};
    {% endif %}
  }

  .feature-stat-{{ features_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background: {{ block.settings.stat_background }};
    color: {{ block.settings.stat_color }};
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media screen and (max-width: 749px) {
    .features-showcase-{{ features_id }} {
      padding: {{ block.settings.padding | times: 0.8 }}px 20px;
    }

    .features-grid-{{ features_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.5 }}px;
    }

    .feature-item-{{ features_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .features-title-{{ features_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .feature-title-{{ features_id }} {
      font-size: {{ block.settings.feature_title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="features-showcase-{{ features_id }}" {{ block.shopify_attributes }}>
  <div class="features-container-{{ features_id }}">
    <div class="features-header-{{ features_id }}">
      {% if block.settings.title != blank %}
        <h2 class="features-title-{{ features_id }}">{{ block.settings.title }}</h2>
      {% endif %}

      {% if block.settings.subtitle != blank %}
        <p class="features-subtitle-{{ features_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="features-grid-{{ features_id }}">
      {% for feature in block.settings.features %}
        <div class="feature-item-{{ features_id }}">
          {% if feature.stat != blank %}
            <div class="feature-stat-{{ features_id }}">{{ feature.stat }}</div>
          {% endif %}

          <div class="feature-content-{{ features_id }}">
            <div class="feature-icon-container-{{ features_id }}">
              {% case feature.icon_type %}
                {% when 'lucide' %}
                  <svg class="feature-icon-{{ features_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    {% case feature.lucide_icon %}
                      {% when 'shield' %}
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                      {% when 'heart' %}
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                      {% when 'star' %}
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                      {% when 'check-circle' %}
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <polyline points="22,4 12,14.01 9,11.01"/>
                      {% when 'zap' %}
                        <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                      {% when 'users' %}
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                      {% when 'leaf' %}
                        <path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"/>
                        <line x1="16" y1="8" x2="2" y2="22"/>
                        <line x1="17.5" y1="15" x2="9" y2="15"/>
                      {% when 'sun' %}
                        <circle cx="12" cy="12" r="5"/>
                        <line x1="12" y1="1" x2="12" y2="3"/>
                        <line x1="12" y1="21" x2="12" y2="23"/>
                        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                        <line x1="1" y1="12" x2="3" y2="12"/>
                        <line x1="21" y1="12" x2="23" y2="12"/>
                        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                      {% else %}
                        <circle cx="12" cy="12" r="10"/>
                        <path d="m9 12 2 2 4-4"/>
                      {% endcase %}
                  </svg>
                {% else %}
                  <div class="feature-icon-{{ features_id }}" style="width: 24px; height: 24px; background: {{ block.settings.icon_color }}; border-radius: 2px;"></div>
              {% endcase %}
            </div>

            {% if feature.title != blank %}
              <h3 class="feature-title-{{ features_id }}">{{ feature.title }}</h3>
            {% endif %}

            {% if feature.description != blank %}
              <p class="feature-description-{{ features_id }}">{{ feature.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

