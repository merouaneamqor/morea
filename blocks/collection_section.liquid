{% doc %}
  Collection Section Block

  A showcase section for the product collection with
  compelling copy and visual elements.
{% enddoc %}

{% assign collection_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .collection-section-{{ collection_id }} {
    background: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px 20px;
    position: relative;
    overflow: hidden;
  }

  {% if block.settings.background_pattern %}
    .collection-section-{{ collection_id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: radial-gradient(circle at 75% 25%, {{ block.settings.pattern_color }} 2px, transparent 2px);
      background-size: 30px 30px;
      opacity: 0.04;
      z-index: 1;
    }
  {% endif %}

  .collection-container-{{ collection_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .collection-content-{{ collection_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.grid_gap }}px;
    align-items: center;
  }

  .collection-text-{{ collection_id }} {
    padding: {{ block.settings.text_padding }}px;
  }

  .collection-title-{{ collection_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    line-height: 1.3;
  }

  .collection-subtitle-{{ collection_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    line-height: 1.6;
    font-style: italic;
  }

  .collection-description-{{ collection_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.7;
    margin: 0;
  }

  .collection-visual-{{ collection_id }} {
    position: relative;
    background: {{ block.settings.visual_bg }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.visual_padding }}px;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .collection-visual-{{ collection_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, {{ block.settings.visual_gradient_start }}, {{ block.settings.visual_gradient_end }});
    opacity: 0.1;
    z-index: 1;
  }

  .collection-visual-content-{{ collection_id }} {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 300px;
  }

  .collection-visual-icon-{{ collection_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.content_spacing }}px;
    color: {{ block.settings.icon_color }};
    opacity: 0.8;
  }

  .collection-visual-text-{{ collection_id }} {
    font-size: {{ block.settings.visual_text_size }}px;
    color: {{ block.settings.visual_text_color }};
    font-weight: 500;
    margin: 0;
    line-height: 1.5;
  }

  .collection-features-{{ collection_id }} {
    margin-top: {{ block.settings.section_spacing }}px;
    padding-top: {{ block.settings.section_spacing }}px;
    border-top: 1px solid {{ block.settings.divider_color }};
  }

  .collection-features-grid-{{ collection_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: {{ block.settings.features_gap }}px;
  }

  .collection-feature-item-{{ collection_id }} {
    background: {{ block.settings.feature_bg }};
    padding: {{ block.settings.feature_padding }}px;
    border-radius: 8px;
    border-left: 4px solid {{ block.settings.feature_accent }};
    transition: transform 0.3s ease;
  }

  .collection-feature-item-{{ collection_id }}:hover {
    transform: translateY(-2px);
  }

  .collection-feature-title-{{ collection_id }} {
    font-size: {{ block.settings.feature_title_size }}px;
    font-weight: {{ block.settings.feature_title_weight }};
    color: {{ block.settings.feature_title_color }};
    margin: 0 0 8px 0;
  }

  .collection-feature-description-{{ collection_id }} {
    font-size: {{ block.settings.feature_description_size }}px;
    color: {{ block.settings.feature_description_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .collection-content-{{ collection_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.5 }}px;
    }

    .collection-section-{{ collection_id }} {
      padding: {{ block.settings.padding | times: 0.8 }}px 20px;
    }

    .collection-text-{{ collection_id }} {
      padding: {{ block.settings.text_padding | times: 0.8 }}px;
      text-align: center;
    }

    .collection-visual-{{ collection_id }} {
      min-height: 300px;
    }

    .collection-title-{{ collection_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .collection-features-grid-{{ collection_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.features_gap | times: 0.5 }}px;
    }
  }
{% endstyle %}

<div class="collection-section-{{ collection_id }}" {{ block.shopify_attributes }}>
  <div class="collection-container-{{ collection_id }}">
    <div class="collection-content-{{ collection_id }}">
      <div class="collection-text-{{ collection_id }}">
        {% if block.settings.title != blank %}
          <h2 class="collection-title-{{ collection_id }}">{{ block.settings.title }}</h2>
        {% endif %}

        {% if block.settings.subtitle != blank %}
          <p class="collection-subtitle-{{ collection_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="collection-description-{{ collection_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>

      <div class="collection-visual-{{ collection_id }}">
        <div class="collection-visual-content-{{ collection_id }}">
          <svg class="collection-visual-icon-{{ collection_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16v16H4V4z"/>
            <path d="M8 8h8v8H8V8z"/>
            <path d="M12 12h4v4h-4v-4z"/>
          </svg>
          <p class="collection-visual-text-{{ collection_id }}">Modest Move Collection</p>
        </div>
      </div>
    </div>

    <div class="collection-features-{{ collection_id }}">
      <div class="collection-features-grid-{{ collection_id }}">
        {% for feature in block.settings.features %}
          <div class="collection-feature-item-{{ collection_id }}">
            {% if feature.title != blank %}
              <h4 class="collection-feature-title-{{ collection_id }}">{{ feature.title }}</h4>
            {% endif %}

            {% if feature.description != blank %}
              <p class="collection-feature-description-{{ collection_id }}">{{ feature.description }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

