{% doc %}
  @prompt
    Waist Cover Soft Taupe
    
    Coverage made easy. Whether you're at the gym or training outdoors, stay focused and covered without compromising your modest values with our Waist Cover
    
    Modest fit
    Lightweight & breathable
    Quick Coverage. Confident Movement.
    74% nylon 26% spandex
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-feature-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-feature-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .ai-product-feature-container-{{ ai_gen_id }} {
      grid-template-columns: {% if block.settings.layout == 'image_left' %}1fr 1fr{% else %}1fr 1fr{% endif %};
      gap: 60px;
    }

    .ai-product-feature-container-{{ ai_gen_id }}.layout-image-right {
      direction: ltr;
    }

    .ai-product-feature-container-{{ ai_gen_id }}.layout-image-left {
      direction: rtl;
    }

    .ai-product-feature-container-{{ ai_gen_id }}.layout-image-right > *,
    .ai-product-feature-container-{{ ai_gen_id }}.layout-image-left > * {
      direction: ltr;
    }
  }

  .ai-product-feature-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-product-feature-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-product-feature-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 3 / 4;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-feature-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-feature-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-product-feature-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
  }

  .ai-product-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.2;
    letter-spacing: 0.5px;
  }

  .ai-product-feature-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
  }

  .ai-product-feature-features-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-product-feature-feature-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    font-size: {{ block.settings.feature_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
  }

  .ai-product-feature-feature-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    margin-top: 2px;
  }

  .ai-product-feature-feature-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    stroke: {{ block.settings.icon_color }};
  }

  .ai-product-feature-material-{{ ai_gen_id }} {
    font-size: {{ block.settings.material_size }}px;
    color: {{ block.settings.text_color }};
    font-style: italic;
    opacity: 0.8;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-feature-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-product-feature-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-product-feature-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-feature-container-{{ ai_gen_id }} layout-{{ block.settings.layout }}">
    <div class="ai-product-feature-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 1200 }}"
          alt="{{ block.settings.image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
          class="ai-product-feature-image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-product-feature-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-apparel-1' | placeholder_svg_tag }}
          <div class="ai-product-feature-empty-state-{{ ai_gen_id }}">
            Add a product image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-product-feature-content-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-product-feature-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-product-feature-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}

      {% if block.settings.feature_1 != blank or block.settings.feature_2 != blank or block.settings.feature_3 != blank or block.settings.feature_4 != blank %}
        <ul class="ai-product-feature-features-{{ ai_gen_id }}">
          {% if block.settings.feature_1 != blank %}
            <li class="ai-product-feature-feature-item-{{ ai_gen_id }}">
              <span class="ai-product-feature-feature-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </span>
              <span>{{ block.settings.feature_1 }}</span>
            </li>
          {% endif %}

          {% if block.settings.feature_2 != blank %}
            <li class="ai-product-feature-feature-item-{{ ai_gen_id }}">
              <span class="ai-product-feature-feature-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </span>
              <span>{{ block.settings.feature_2 }}</span>
            </li>
          {% endif %}

          {% if block.settings.feature_3 != blank %}
            <li class="ai-product-feature-feature-item-{{ ai_gen_id }}">
              <span class="ai-product-feature-feature-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </span>
              <span>{{ block.settings.feature_3 }}</span>
            </li>
          {% endif %}

          {% if block.settings.feature_4 != blank %}
            <li class="ai-product-feature-feature-item-{{ ai_gen_id }}">
              <span class="ai-product-feature-feature-icon-{{ ai_gen_id }}">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </span>
              <span>{{ block.settings.feature_4 }}</span>
            </li>
          {% endif %}
        </ul>
      {% endif %}

      {% if block.settings.material != blank %}
        <p class="ai-product-feature-material-{{ ai_gen_id }}">{{ block.settings.material }}</p>
      {% endif %}
    </div>
  </div>
</div>

