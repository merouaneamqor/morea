    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>The page you're looking for doesn't exist. Check the URL or return to the homepage.</p>"
    },
    {
      "type": "header",
      "content": "Primary button"
    },
    {
      "type": "inline_richtext",
      "id": "primary_button_label",
      "label": "Label",
      "default": "Continue shopping"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "primary_button_bg",
      "label": "Background",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "primary_button_text",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "primary_button_hover_bg",
      "label": "Hover background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "primary_button_hover_text",
      "label": "Hover text",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Secondary button"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_button",
      "label": "Show secondary button",
      "default": true
    },
    {
      "type": "inline_richtext",
      "id": "secondary_button_label",
      "label": "Label",
      "default": "Contact us"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "secondary_button_text",
      "label": "Text",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "secondary_button_border",
      "label": "Border",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_bg",
      "label": "Hover background",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "secondary_button_hover_text",
      "label": "Hover text",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "error_code_color",
      "label": "Error code color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "error_code_size",
      "min": 60,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Error code size",
      "default": 120
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 32
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "range",
      "id": "button_text_size",
      "min": 12,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Button text size",
      "default": 14
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Button border radius",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "404 page"
    }
  ]
}
{% endschema %}
