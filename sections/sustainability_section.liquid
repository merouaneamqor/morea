{% doc %}
  Sustainability Section Block

  A section highlighting environmental responsibility
  and sustainable product development practices.
{% enddoc %}

{% assign sustain_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .sustainability-section-{{ sustain_id }} {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding }}px 20px;
    position: relative;
    overflow: hidden;
  }

  {% if section.settings.background_pattern %}
    .sustainability-section-{{ sustain_id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: radial-gradient(circle at 50% 50%, {{ section.settings.pattern_color }} 2px, transparent 2px);
      background-size: 40px 40px;
      opacity: 0.04;
      z-index: 1;
    }
  {% endif %}

  .sustainability-container-{{ sustain_id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .sustainability-content-{{ sustain_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.grid_gap }}px;
    align-items: center;
  }

  .sustainability-text-{{ sustain_id }} {
    padding: {{ section.settings.text_padding }}px;
  }

  .sustainability-title-{{ sustain_id }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
    line-height: 1.3;
  }

  .sustainability-subtitle-{{ sustain_id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
    line-height: 1.6;
    font-style: italic;
  }

  .sustainability-description-{{ sustain_id }} {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.7;
    margin: 0;
  }

  .sustainability-visual-{{ sustain_id }} {
    position: relative;
    background: {{ section.settings.visual_bg }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.visual_padding }}px;
    min-height: 350px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .sustainability-visual-{{ sustain_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, {{ section.settings.visual_gradient_start }}, {{ section.settings.visual_gradient_end }});
    opacity: 0.1;
    z-index: 1;
  }

  .sustainability-visual-content-{{ sustain_id }} {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 280px;
  }

  .sustainability-visual-icon-{{ sustain_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 auto {{ section.settings.content_spacing }}px;
    color: {{ section.settings.icon_color }};
    opacity: 0.8;
  }

  .sustainability-visual-text-{{ sustain_id }} {
    font-size: {{ section.settings.visual_text_size }}px;
    color: {{ section.settings.visual_text_color }};
    font-weight: 500;
    margin: 0;
    line-height: 1.5;
  }

  .sustainability-commitments-{{ sustain_id }} {
    margin-top: {{ section.settings.section_spacing }}px;
    padding-top: {{ section.settings.section_spacing }}px;
    border-top: 1px solid {{ section.settings.divider_color }};
  }

  .sustainability-commitments-grid-{{ sustain_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: {{ section.settings.commitments_gap }}px;
  }

  .sustainability-commitment-{{ sustain_id }} {
    background: {{ section.settings.commitment_bg }};
    padding: {{ section.settings.commitment_padding }}px;
    border-radius: 8px;
    border-left: 4px solid {{ section.settings.commitment_accent }};
    transition: transform 0.3s ease;
  }

  .sustainability-commitment-{{ sustain_id }}:hover {
    transform: translateY(-2px);
  }

  .commitment-title-{{ sustain_id }} {
    font-size: {{ section.settings.commitment_title_size }}px;
    font-weight: {{ section.settings.commitment_title_weight }};
    color: {{ section.settings.commitment_title_color }};
    margin: 0 0 8px 0;
  }

  .commitment-description-{{ sustain_id }} {
    font-size: {{ section.settings.commitment_description_size }}px;
    color: {{ section.settings.commitment_description_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .sustainability-content-{{ sustain_id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.grid_gap | times: 0.5 }}px;
    }

    .sustainability-section-{{ sustain_id }} {
      padding: {{ section.settings.padding | times: 0.8 }}px 20px;
    }

    .sustainability-text-{{ sustain_id }} {
      padding: {{ section.settings.text_padding | times: 0.8 }}px;
      text-align: center;
    }

    .sustainability-visual-{{ sustain_id }} {
      min-height: 280px;
    }

    .sustainability-title-{{ sustain_id }} {
      font-size: {{ section.settings.title_size | times: 0.9 }}px;
    }

    .sustainability-commitments-grid-{{ sustain_id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.commitments_gap | times: 0.5 }}px;
    }
  }
{% endstyle %}

<div class="sustainability-section-{{ sustain_id }}" >
  <div class="sustainability-container-{{ sustain_id }}">
    <div class="sustainability-content-{{ sustain_id }}">
      <div class="sustainability-text-{{ sustain_id }}">
        {% if section.settings.title != blank %}
          <h2 class="sustainability-title-{{ sustain_id }}">{{ section.settings.title }}</h2>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <p class="sustainability-subtitle-{{ sustain_id }}">{{ section.settings.subtitle }}</p>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="sustainability-description-{{ sustain_id }}">{{ section.settings.description }}</div>
        {% endif %}
      </div>

      <div class="sustainability-visual-{{ sustain_id }}">
        <div class="sustainability-visual-content-{{ sustain_id }}">
          <svg class="sustainability-visual-icon-{{ sustain_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"/>
            <line x1="16" y1="8" x2="2" y2="22"/>
            <line x1="17.5" y1="15" x2="9" y2="15"/>
          </svg>
          <p class="sustainability-visual-text-{{ sustain_id }}">Sustainable by Design</p>
        </div>
      </div>
    </div>

    <div class="sustainability-commitments-{{ sustain_id }}">
      <div class="sustainability-commitments-grid-{{ sustain_id }}">
        {% for commitment in section.settings.commitments %}
          <div class="sustainability-commitment-{{ sustain_id }}">
            {% if commitment.title != blank %}
              <h4 class="commitment-title-{{ sustain_id }}">{{ commitment.title }}</h4>
            {% endif %}

            {% if commitment.description != blank %}
              <p class="commitment-description-{{ sustain_id }}">{{ commitment.description }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

