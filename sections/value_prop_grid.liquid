{% doc %}
  Value Proposition Grid Block

  A 4-column grid showcasing key value propositions
  with icons, titles, and descriptions for conversion focus.
{% enddoc %}

{% assign grid_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .value-prop-grid-{{ grid_id }} {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding }}px 20px;
  }

  .value-prop-container-{{ grid_id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }

  .value-prop-header-{{ grid_id }} {
    text-align: center;
    margin-bottom: {{ section.settings.section_spacing }}px;
  }

  .value-prop-title-{{ grid_id }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
    line-height: 1.3;
  }

  .value-prop-subtitle-{{ grid_id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  .value-prop-grid-{{ grid_id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    margin-top: {{ section.settings.section_spacing }}px;
  }

  .value-prop-item-{{ grid_id }} {
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    padding: {{ section.settings.card_padding }}px;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    height: 100%;
  }

  .value-prop-item-{{ grid_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, {{ section.settings.card_gradient_start }}, {{ section.settings.card_gradient_end }});
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 1;
  }

  {% if section.settings.card_hover_gradient %}
    .value-prop-item-{{ grid_id }}:hover::before {
      opacity: 0.05;
    }
  {% endif %}

  .value-prop-item-{{ grid_id }}:hover {
    transform: translateY(-{{ section.settings.card_hover_lift }}px);
    box-shadow: 0 12px 40px rgba(0,0,0,0.1);
  }

  .value-prop-content-{{ grid_id }} {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .value-prop-icon-container-{{ grid_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 auto {{ section.settings.content_spacing }}px;
    background: {{ section.settings.icon_background }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .value-prop-icon-container-{{ grid_id }}::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: {{ section.settings.icon_hover_background }};
    border-radius: 50%;
    transition: all 0.4s ease;
    transform: translate(-50%, -50%);
    z-index: 1;
  }

  .value-prop-item-{{ grid_id }}:hover .value-prop-icon-container-{{ grid_id }}::before {
    width: {{ section.settings.icon_size | times: 2 }}px;
    height: {{ section.settings.icon_size | times: 2 }}px;
  }

  .value-prop-icon-{{ grid_id }} {
    width: {{ section.settings.icon_size | times: 0.5 }}px;
    height: {{ section.settings.icon_size | times: 0.5 }}px;
    color: {{ section.settings.icon_color }};
    transition: all 0.3s ease;
    z-index: 2;
    position: relative;
  }

  .value-prop-item-{{ grid_id }}:hover .value-prop-icon-{{ grid_id }} {
    transform: scale(1.1);
    {% if section.settings.icon_hover_color != blank %}
      color: {{ section.settings.icon_hover_color }};
    {% endif %}
  }

  .value-prop-item-title-{{ grid_id }} {
    font-size: {{ section.settings.item_title_size }}px;
    font-weight: {{ section.settings.item_title_weight }};
    color: {{ section.settings.item_title_color }};
    margin: 0 0 {{ section.settings.content_spacing | times: 0.5 }}px 0;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .value-prop-item-{{ grid_id }}:hover .value-prop-item-title-{{ grid_id }} {
    {% if section.settings.item_title_hover_color != blank %}
      color: {{ section.settings.item_title_hover_color }};
    {% endif %}
  }

  .value-prop-item-description-{{ grid_id }} {
    font-size: {{ section.settings.item_description_size }}px;
    color: {{ section.settings.item_description_color }};
    line-height: 1.6;
    margin: 0;
    flex: 1;
    transition: color 0.3s ease;
  }

  .value-prop-item-{{ grid_id }}:hover .value-prop-item-description-{{ grid_id }} {
    {% if section.settings.item_description_hover_color != blank %}
      color: {{ section.settings.item_description_hover_color }};
    {% endif %}
  }

  .value-prop-accent-{{ grid_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background: {{ section.settings.accent_bg }};
    color: {{ section.settings.accent_color }};
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media screen and (max-width: 749px) {
    .value-prop-grid-{{ grid_id }} {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.grid_gap | times: 0.5 }}px;
    }

    .value-prop-grid-{{ grid_id }} {
      padding: {{ section.settings.padding | times: 0.8 }}px 20px;
    }

    .value-prop-item-{{ grid_id }} {
      padding: {{ section.settings.card_padding | times: 0.8 }}px;
    }

    .value-prop-title-{{ grid_id }} {
      font-size: {{ section.settings.title_size | times: 0.9 }}px;
    }

    .value-prop-item-title-{{ grid_id }} {
      font-size: {{ section.settings.item_title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="value-prop-grid-{{ grid_id }}" >
  <div class="value-prop-container-{{ grid_id }}">
    <div class="value-prop-header-{{ grid_id }}">
      {% if section.settings.title != blank %}
        <h2 class="value-prop-title-{{ grid_id }}">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="value-prop-subtitle-{{ grid_id }}">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="value-prop-grid-{{ grid_id }}">
      {% for prop in section.settings.propositions %}
        <div class="value-prop-item-{{ grid_id }}">
          {% if prop.accent != blank %}
            <div class="value-prop-accent-{{ grid_id }}">{{ prop.accent }}</div>
          {% endif %}

          <div class="value-prop-content-{{ grid_id }}">
            <div class="value-prop-icon-container-{{ grid_id }}">
              {% case prop.icon_type %}
                {% when 'lucide' %}
                  <svg class="value-prop-icon-{{ grid_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    {% case prop.lucide_icon %}
                      {% when 'shield' %}
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                      {% when 'heart' %}
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                      {% when 'star' %}
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                      {% when 'check-circle' %}
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <polyline points="22,4 12,14.01 9,11.01"/>
                      {% when 'zap' %}
                        <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>
                      {% when 'users' %}
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                      {% when 'leaf' %}
                        <path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"/>
                        <line x1="16" y1="8" x2="2" y2="22"/>
                        <line x1="17.5" y1="15" x2="9" y2="15"/>
                      {% when 'sun' %}
                        <circle cx="12" cy="12" r="5"/>
                        <line x1="12" y1="1" x2="12" y2="3"/>
                        <line x1="12" y1="21" x2="12" y2="23"/>
                        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                        <line x1="1" y1="12" x2="3" y2="12"/>
                        <line x1="21" y1="12" x2="23" y2="12"/>
                        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                      {% else %}
                        <circle cx="12" cy="12" r="10"/>
                        <path d="m9 12 2 2 4-4"/>
                      {% endcase %}
                  </svg>
                {% else %}
                  <div class="value-prop-icon-{{ grid_id }}" style="width: 24px; height: 24px; background: {{ section.settings.icon_color }}; border-radius: 2px;"></div>
              {% endcase %}
            </div>

            {% if prop.title != blank %}
              <h3 class="value-prop-item-title-{{ grid_id }}">{{ prop.title }}</h3>
            {% endif %}

            {% if prop.description != blank %}
              <p class="value-prop-item-description-{{ grid_id }}">{{ prop.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

