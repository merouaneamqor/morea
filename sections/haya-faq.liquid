{%- style -%}
  .haya-faq {
    padding: {{ section.settings.padding_top | times: 0.75 }}px 0 {{ section.settings.padding_bottom | times: 0.75 }}px;
    background: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .haya-faq {
      padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    }
  }

  .haya-faq__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .haya-faq__title {
    font-family: var(--font-heading-family);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: {{ section.settings.text_color }};
    margin: 0 0 0.75rem;
  }

  .haya-faq__subtitle {
    font-size: 1.4rem;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    margin: 0;
  }

  .haya-faq__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .haya-faq__item {
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .haya-faq__item:first-child {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .haya-faq__item details {
    margin: 0;
  }

  .haya-faq__item summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 0;
    cursor: pointer;
    list-style: none;
    gap: 1rem;
  }

  .haya-faq__item summary::-webkit-details-marker {
    display: none;
  }

  .haya-faq__item summary::marker {
    display: none;
  }

  .haya-faq__question {
    font-family: var(--font-heading-family);
    font-size: 1.6rem;
    font-weight: 600;
    color: {{ section.settings.text_color }};
    margin: 0;
    text-align: left;
  }

  .haya-faq__icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    position: relative;
    color: {{ section.settings.text_color }};
  }

  .haya-faq__icon::before,
  .haya-faq__icon::after {
    content: '';
    position: absolute;
    background: currentColor;
    transition: transform 0.3s ease;
  }

  .haya-faq__icon::before {
    width: 100%;
    height: 2px;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  .haya-faq__icon::after {
    width: 2px;
    height: 100%;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
  }

  .haya-faq__item details[open] .haya-faq__icon::after {
    transform: translateX(-50%) rotate(90deg);
    opacity: 0;
  }

  .haya-faq__answer {
    padding: 0 0 1.5rem;
    font-size: 1.4rem;
    line-height: 1.7;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
  }

  .haya-faq__answer p {
    margin: 0 0 1rem;
  }

  .haya-faq__answer p:last-child {
    margin-bottom: 0;
  }

  .haya-faq__answer strong {
    font-weight: 700;
  }
{%- endstyle -%}

<section class="haya-faq{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="page-width">
    <div class="haya-faq__header">
      {%- if section.settings.title != blank -%}
        <h2 class="haya-faq__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
        <p class="haya-faq__subtitle">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div class="haya-faq__container">
      {%- for block in section.blocks -%}
        <div class="haya-faq__item" {{ block.shopify_attributes }}>
          <details{% if forloop.first and section.settings.open_first %} open{% endif %}>
            <summary>
              <h3 class="haya-faq__question">{{ block.settings.question }}</h3>
              <span class="haya-faq__icon"></span>
            </summary>
            <div class="haya-faq__answer rte">
              {{ block.settings.answer }}
            </div>
          </details>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

