{%- style -%}
  /* ==============================================
     MOREA FEATURED PRODUCTS - Clean Girly Style
     ============================================== */

  .sport-products {
    padding: {{ section.settings.padding_top | times: 0.75 }}px 0 {{ section.settings.padding_bottom | times: 0.75 }}px;
    background: #ffffff;
  }

  @media screen and (min-width: 750px) {
    .sport-products {
      padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    }
  }

  .sport-products__header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    margin-bottom: 2.5rem;
    padding: 0 2rem;
  }

  @media screen and (min-width: 750px) {
    .sport-products__header {
      padding: 0;
      margin-bottom: 3rem;
    }
  }

  /* Bold uppercase title */
  .sport-products__title {
    font-family: 'Bebas Neue', 'Impact', 'Arial Black', sans-serif;
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 400;
    font-style: normal;
    letter-spacing: 0.02em;
    line-height: 0.9;
    margin: 0;
    color: #2d2d2d;
    text-transform: uppercase;
  }

  .sport-products__subtitle {
    font-family: var(--font-body-family);
    font-size: 1.2rem;
    font-weight: 500;
    color: #888888;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin: 0.75rem 0 0;
  }

  /* Navigation arrows - Clean style */
  .sport-products__nav {
    display: flex;
    gap: 0.75rem;
  }

  .sport-products__nav-btn {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 2px solid #2d2d2d;
    background: #ffffff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .sport-products__nav-btn:hover {
    background: #d4a5a5;
    border-color: #d4a5a5;
  }

  .sport-products__nav-btn:hover i {
    color: #ffffff;
  }

  .sport-products__nav-btn i {
    font-size: 1.6rem;
    color: #2d2d2d;
    transition: color 0.2s ease;
  }

  .sport-products__slider-wrapper {
    position: relative;
    overflow: hidden;
  }

  .sport-products__grid {
    display: flex;
    gap: 1.25rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    padding: 0 2rem 1rem;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .sport-products__grid::-webkit-scrollbar {
    display: none;
  }

  @media screen and (min-width: 990px) {
    .sport-products__grid {
      gap: 1.5rem;
      padding: 0 0 1rem;
    }
  }

  /* Product Card - Clean Girly Style */
  .sport-product-card {
    flex: 0 0 280px;
    min-width: 280px;
    scroll-snap-align: start;
    background: #faf9f7;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .sport-product-card {
      flex: 0 0 320px;
      min-width: 320px;
    }
  }

  .sport-product-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
  }

  .sport-product-card__media {
    position: relative;
    aspect-ratio: 4/5;
    overflow: hidden;
    background: #f0eeec;
    border-radius: 12px 12px 0 0;
  }

  .sport-product-card__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .sport-product-card:hover .sport-product-card__media img {
    transform: scale(1.06);
  }

  /* Badge - Soft rounded */
  .sport-product-card__badge {
    position: absolute;
    top: 12px;
    left: 12px;
    background: #d4a5a5;
    color: #ffffff;
    padding: 6px 14px;
    border-radius: 4px;
    font-family: var(--font-body-family);
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .sport-product-card__badge--new {
    background: #2d2d2d;
  }

  .sport-product-card__badge--soldout {
    background: #888888;
  }

  .sport-product-card__content {
    padding: 1.25rem 1.25rem 1.5rem;
    background: #ffffff;
  }

  /* Product title - Bold uppercase */
  .sport-product-card__title {
    font-family: 'Bebas Neue', 'Impact', 'Arial Black', sans-serif;
    font-size: 2rem;
    font-weight: 400;
    margin: 0 0 0.5rem;
    color: #2d2d2d;
    line-height: 1;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .sport-product-card__price {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .sport-product-card__price-current {
    font-family: var(--font-body-family);
    font-size: 1.5rem;
    font-weight: 600;
    color: #2d2d2d;
  }

  .sport-product-card__price-compare {
    font-size: 1.3rem;
    font-weight: 400;
    color: #999999;
    text-decoration: line-through;
  }

  /* Color swatches - Round */
  .sport-product-card__swatches {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 1.25rem;
    flex-wrap: wrap;
  }

  .sport-product-card__swatch {
    width: 22px;
    height: 22px;
    border-radius: 50%;
    border: 2px solid #ffffff;
    box-shadow: 0 0 0 1px rgba(0,0,0,0.15);
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .sport-product-card__swatch:hover {
    transform: scale(1.15);
    box-shadow: 0 0 0 2px #d4a5a5;
  }

  .sport-product-card__colors-count {
    font-size: 1.2rem;
    font-weight: 500;
    color: #888888;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-left: 4px;
  }

  /* CTA Button - Clean rounded */
  .sport-product-card__button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    background: #2d2d2d;
    color: #ffffff;
    padding: 1.2rem 1.5rem;
    border-radius: 8px;
    font-family: var(--font-body-family);
    font-size: 1.3rem;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.25s ease;
    position: relative;
    overflow: hidden;
  }

  .sport-product-card__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #d4a5a5;
    transition: left 0.3s ease;
    z-index: 0;
  }

  .sport-product-card__button:hover::before {
    left: 0;
  }

  .sport-product-card__button span,
  .sport-product-card__button i {
    position: relative;
    z-index: 1;
  }

  .sport-product-card__button i {
    font-size: 1.4rem;
    transition: transform 0.3s ease;
  }

  .sport-product-card__button:hover i {
    transform: translateX(5px);
  }

  /* View All Button - Clean girly style */
  .sport-products__view-all {
    display: flex;
    justify-content: center;
    margin-top: 3.5rem;
    padding: 0 2rem;
  }

  .sport-products__view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    background: transparent;
    color: #2d2d2d;
    padding: 1.2rem 2.5rem;
    border: 2px solid #2d2d2d;
    border-radius: 8px;
    font-family: var(--font-body-family);
    font-size: 1.3rem;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.25s ease;
    position: relative;
    overflow: hidden;
  }

  .sport-products__view-all-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #d4a5a5;
    transition: left 0.3s ease;
    z-index: 0;
  }

  .sport-products__view-all-btn:hover::before {
    left: 0;
  }

  .sport-products__view-all-btn span,
  .sport-products__view-all-btn i {
    position: relative;
    z-index: 1;
    transition: color 0.3s ease;
  }

  .sport-products__view-all-btn:hover {
    color: #ffffff;
    border-color: #d4a5a5;
  }

  .sport-products__view-all-btn:hover span,
  .sport-products__view-all-btn:hover i {
    color: #ffffff;
  }

  .sport-products__view-all-btn i {
    font-size: 1.4rem;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .sport-products__view-all-btn:hover i {
    transform: translateX(5px);
  }
{%- endstyle -%}

<section class="sport-products{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="page-width">
    <div class="sport-products__header">
      <div>
        {%- if section.settings.title != blank -%}
          <h2 class="sport-products__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="sport-products__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
      <div class="sport-products__nav">
        <button
          type="button"
          class="sport-products__nav-btn"
          onclick="document.getElementById('sport-slider-{{ section.id }}').scrollBy({left: -340, behavior: 'smooth'})"
          aria-label="Previous"
        >
          <i class="fa-solid fa-chevron-left"></i>
        </button>
        <button
          type="button"
          class="sport-products__nav-btn"
          onclick="document.getElementById('sport-slider-{{ section.id }}').scrollBy({left: 340, behavior: 'smooth'})"
          aria-label="Next"
        >
          <i class="fa-solid fa-chevron-right"></i>
        </button>
      </div>
    </div>

    {%- if section.settings.collection != blank -%}
      <div class="sport-products__slider-wrapper">
        <div class="sport-products__grid" id="sport-slider-{{ section.id }}">
          {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
            <div
              class="sport-product-card{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {% if settings.animations_reveal_on_scroll %}
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              <a href="{{ product.url }}" class="sport-product-card__media">
                {%- if product.featured_media -%}
                  {{
                    product.featured_media
                    | image_url: width: 800
                    | image_tag:
                      sizes: '(min-width: 990px) 25vw, (min-width: 750px) 45vw, 75vw',
                      widths: '300, 400, 500, 600, 800'
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}

                {%- if forloop.first -%}
                  <span class="sport-product-card__badge sport-product-card__badge--new">Best Seller</span>
                {%- elsif product.compare_at_price > product.price -%}
                  <span class="sport-product-card__badge">Sale</span>
                {%- elsif product.available == false -%}
                  <span class="sport-product-card__badge sport-product-card__badge--soldout">Sold Out</span>
                {%- endif -%}
              </a>

              <div class="sport-product-card__content">
                <h3 class="sport-product-card__title">{{ product.title }}</h3>

                <div class="sport-product-card__price">
                  <span class="sport-product-card__price-current">{{ product.price | money }}</span>
                  {%- if product.compare_at_price > product.price -%}
                    <span class="sport-product-card__price-compare">{{ product.compare_at_price | money }}</span>
                  {%- endif -%}
                </div>

                {%- assign color_option = product.options_by_name.Color
                  | default: product.options_by_name.Colour
                  | default: product.options_by_name.Couleur
                  | default: product.options_by_name.couleur
                -%}
                {%- if color_option and color_option.values.size > 0 -%}
                  <div class="sport-product-card__swatches">
                    {%- for color in color_option.values limit: 6 -%}
                      {%- assign color_handle = color | handleize -%}
                      {%- case color_handle -%}
                        {%- when 'black' -%}
                          {%- assign swatch_color = '#000000' -%}
                        {%- when 'white' -%}
                          {%- assign swatch_color = '#ffffff' -%}
                        {%- when 'navy', 'navy-blue' -%}
                          {%- assign swatch_color = '#1e3a5f' -%}
                        {%- when 'grey', 'gray' -%}
                          {%- assign swatch_color = '#808080' -%}
                        {%- when 'charcoal' -%}
                          {%- assign swatch_color = '#36454f' -%}
                        {%- when 'olive', 'khaki' -%}
                          {%- assign swatch_color = '#808000' -%}
                        {%- when 'beige', 'cream', 'sand' -%}
                          {%- assign swatch_color = '#f5f5dc' -%}
                        {%- when 'pink' -%}
                          {%- assign swatch_color = '#ffc0cb' -%}
                        {%- when 'blue' -%}
                          {%- assign swatch_color = '#4169e1' -%}
                        {%- when 'red' -%}
                          {%- assign swatch_color = '#ff0000' -%}
                        {%- when 'green' -%}
                          {%- assign swatch_color = '#228b22' -%}
                        {%- when 'brown' -%}
                          {%- assign swatch_color = '#8b4513' -%}
                        {%- when 'purple' -%}
                          {%- assign swatch_color = '#800080' -%}
                        {%- when 'orange' -%}
                          {%- assign swatch_color = '#ff8c00' -%}
                        {%- when 'yellow' -%}
                          {%- assign swatch_color = '#ffd700' -%}
                        {%- when 'teal' -%}
                          {%- assign swatch_color = '#008080' -%}
                        {%- when 'burgundy', 'maroon' -%}
                          {%- assign swatch_color = '#800020' -%}
                        {%- when 'camel', 'tan', 'taupe' -%}
                          {%- assign swatch_color = '#c19a6b' -%}
                        {%- when 'rose', 'dusty-rose', 'blush' -%}
                          {%- assign swatch_color = '#d4a5a5' -%}
                        {%- when 'coral' -%}
                          {%- assign swatch_color = '#ff7f50' -%}
                        {%- when 'mint' -%}
                          {%- assign swatch_color = '#98ff98' -%}
                        {%- when 'lavender' -%}
                          {%- assign swatch_color = '#e6e6fa' -%}
                        {%- when 'noir' -%}
                          {%- assign swatch_color = '#000000' -%}
                        {%- when 'blanc' -%}
                          {%- assign swatch_color = '#ffffff' -%}
                        {%- when 'gris' -%}
                          {%- assign swatch_color = '#808080' -%}
                        {%- when 'bleu' -%}
                          {%- assign swatch_color = '#4169e1' -%}
                        {%- when 'rouge' -%}
                          {%- assign swatch_color = '#ff0000' -%}
                        {%- when 'vert' -%}
                          {%- assign swatch_color = '#228b22' -%}
                        {%- when 'rose' -%}
                          {%- assign swatch_color = '#ffc0cb' -%}
                        {%- when 'marron' -%}
                          {%- assign swatch_color = '#8b4513' -%}
                        {%- when 'bordeaux' -%}
                          {%- assign swatch_color = '#800020' -%}
                        {%- else -%}
                          {%- assign swatch_color = '#cccccc' -%}
                      {%- endcase -%}
                      <span
                        class="sport-product-card__swatch"
                        style="background: {{ swatch_color }};"
                        title="{{ color }}"
                      ></span>
                    {%- endfor -%}
                    {%- if color_option.values.size > 6 -%}
                      <span class="sport-product-card__colors-count">+{{ color_option.values.size | minus: 6 }}</span>
                    {%- endif -%}
                  </div>
                {%- endif -%}

                <a href="{{ product.url }}" class="sport-product-card__button">
                  <span>Shop Now</span>
                  <i class="fa-solid fa-arrow-right"></i>
                </a>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>

      {%- if section.settings.show_view_all -%}
        <div class="sport-products__view-all">
          <a href="{{ section.settings.collection.url }}" class="sport-products__view-all-btn">
            <span>View All Products</span>
            <i class="fa-solid fa-arrow-right"></i>
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="sport-products__slider-wrapper">
        <div class="sport-products__grid" id="sport-slider-{{ section.id }}">
          {%- for i in (1..4) -%}
            <div class="sport-product-card">
              <div class="sport-product-card__media">
                <span class="sport-product-card__badge sport-product-card__badge--new">New</span>
                {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="sport-product-card__content">
                <h3 class="sport-product-card__title">Product Title</h3>
                <div class="sport-product-card__price">
                  <span class="sport-product-card__price-current">349 MAD</span>
                </div>
                <div class="sport-product-card__swatches">
                  <span class="sport-product-card__swatch" style="background: #000000;"></span>
                  <span class="sport-product-card__swatch" style="background: #ffffff;"></span>
                  <span class="sport-product-card__swatch" style="background: #808080;"></span>
                </div>
                <a href="#" class="sport-product-card__button">
                  <span>Shop Now</span>
                  <i class="fa-solid fa-arrow-right"></i>
                </a>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "HAYA Featured Products",
  "tag": "section",
  "class": "section-haya-products",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Best Seller"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Desktop columns"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show view all button"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_background",
      "label": "Button hover background",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "badge_background",
      "label": "Badge background",
      "default": "#dc143c"
    },
    {
      "type": "color",
      "id": "badge_text_color",
      "label": "Badge text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "HAYA Featured Products"
    }
  ]
}
{% endschema %}
