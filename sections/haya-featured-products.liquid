{%- style -%}
  .haya-products {
    padding: {{ section.settings.padding_top | times: 0.75 }}px 0 {{ section.settings.padding_bottom | times: 0.75 }}px;
    background: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .haya-products {
      padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    }
  }

  .haya-products__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2rem;
    padding: 0 2rem;
  }

  @media screen and (min-width: 750px) {
    .haya-products__header {
      padding: 0;
      margin-bottom: 2.5rem;
    }
  }

  .haya-products__title {
    font-family: var(--font-heading-family);
    font-size: 2.4rem;
    font-weight: 500;
    font-style: italic;
    letter-spacing: -0.02em;
    margin: 0;
    color: {{ section.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .haya-products__title {
      font-size: 3rem;
    }
  }

  .haya-products__nav {
    display: flex;
    gap: 0.5rem;
  }

  .haya-products__nav-btn {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid #e5e5e5;
    background: #fff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .haya-products__nav-btn:hover {
    border-color: #1a1a1a;
    background: #1a1a1a;
  }

  .haya-products__nav-btn:hover svg {
    stroke: #fff;
  }

  .haya-products__nav-btn svg {
    width: 20px;
    height: 20px;
    stroke: #1a1a1a;
    stroke-width: 2;
    fill: none;
  }

  .haya-products__subtitle {
    font-size: 1.3rem;
    color: {{ section.settings.text_color }};
    opacity: 0.6;
    margin: 0.5rem 0 0;
  }

  .haya-products__slider-wrapper {
    position: relative;
    overflow: hidden;
  }

  .haya-products__grid {
    display: flex;
    gap: 1.5rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    padding: 0.5rem 2rem 1rem;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .haya-products__grid::-webkit-scrollbar {
    display: none;
  }

  @media screen and (min-width: 990px) {
    .haya-products__grid {
      gap: 1.5rem;
      padding: 0.5rem 0 1rem;
    }
  }

  .haya-product-card {
    flex: 0 0 280px;
    min-width: 280px;
    scroll-snap-align: start;
    background: #f8f8f8;
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  @media screen and (min-width: 750px) {
    .haya-product-card {
      flex: 0 0 300px;
      min-width: 300px;
    }
  }

  .haya-product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
  }

  .haya-product-card__media {
    position: relative;
    aspect-ratio: 4/5;
    overflow: hidden;
    background: #f0f0f0;
    border-radius: 16px 16px 0 0;
  }

  .haya-product-card__media img {
    width: 100%;
    height: 66%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .haya-product-card:hover .haya-product-card__media img {
    transform: scale(1.03);
  }

  .haya-product-card__badge {
    position: absolute;
    top: -22px;
    left: 12px;
    background:rgb(0, 0, 0);
    color: #fff;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .haya-product-card__content {
    padding: 1.25rem 1.5rem 1.5rem;
    background: #fff;
  }

  .haya-product-card__title {
    font-family: var(--font-heading-family);
    font-size: 1.7rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: {{ section.settings.text_color }};
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .haya-product-card__price {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .haya-product-card__price-current {
    font-size: 1.5rem;
    font-weight: 500;
    color: {{ section.settings.text_color }};
  }

  .haya-product-card__price-compare {
    font-size: 1.4rem;
    color: #999;
    text-decoration: line-through;
  }

  .haya-product-card__swatches {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 1.25rem;
    flex-wrap: wrap;
  }

  .haya-product-card__swatch {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 0 0 0 1px rgba(0,0,0,0.15), inset 0 0 0 1px rgba(0,0,0,0.08);
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .haya-product-card__swatch:hover {
    transform: scale(1.2);
    box-shadow: 0 0 0 2px rgba(0,0,0,0.3), inset 0 0 0 1px rgba(0,0,0,0.08);
  }

  .haya-product-card__colors-count {
    font-size: 1.3rem;
    font-weight: 500;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    margin-left: 4px;
  }

  .haya-product-card__button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    background: #1a1a1a;
    color: #fff;
    padding: 14px 1.5rem;
    border-radius: 30px;
    font-size: 1.4rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .haya-product-card__button:hover {
    background: #333;
  }

  .haya-product-card__button svg {
    width: 18px;
    height: 18px;
    transition: transform 0.2s ease;
  }

  .haya-product-card__button:hover svg {
    transform: translateX(4px);
  }

  .haya-products__view-all {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
    padding: 0 2rem;
  }

  .haya-products__view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: transparent;
    color: {{ section.settings.text_color }};
    padding: 1rem 2rem;
    border: 2px solid {{ section.settings.text_color }};
    border-radius: 50px;
    font-size: 1.3rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .haya-products__view-all-btn:hover {
    background: {{ section.settings.text_color }};
    color: {{ section.settings.background_color }};
  }
{%- endstyle -%}

<section class="haya-products{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="page-width">
    <div class="haya-products__header">
      <div>
        {%- if section.settings.title != blank -%}
          <h2 class="haya-products__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="haya-products__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
      <div class="haya-products__nav">
        <button
          type="button"
          class="haya-products__nav-btn"
          onclick="document.getElementById('haya-slider-{{ section.id }}').scrollBy({left: -320, behavior: 'smooth'})"
          aria-label="Previous"
        >
          <svg viewBox="0 0 24 24">
            <path d="M15 18l-6-6 6-6" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button
          type="button"
          class="haya-products__nav-btn"
          onclick="document.getElementById('haya-slider-{{ section.id }}').scrollBy({left: 320, behavior: 'smooth'})"
          aria-label="Next"
        >
          <svg viewBox="0 0 24 24">
            <path d="M9 18l6-6-6-6" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>
    </div>

    {%- if section.settings.collection != blank -%}
      <div class="haya-products__slider-wrapper">
        <div class="haya-products__grid" id="haya-slider-{{ section.id }}">
          {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
            <div
              class="haya-product-card{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {% if settings.animations_reveal_on_scroll %}
                style="--animation-order: {{ forloop.index }};"
              {% endif %}
            >
              <a href="{{ product.url }}" class="haya-product-card__media">
                {%- if product.featured_media -%}
                  {{
                    product.featured_media
                    | image_url: width: 800
                    | image_tag:
                      sizes: '(min-width: 990px) 25vw, (min-width: 750px) 45vw, 75vw',
                      widths: '300, 400, 500, 600, 800'
                  }}
                {%- else -%}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {%- endif -%}

                {%- if forloop.first -%}
                  <span class="haya-product-card__badge">Best Seller</span>
                {%- elsif product.compare_at_price > product.price -%}
                  <span class="haya-product-card__badge" style="background: #dc143c;">Sale</span>
                {%- elsif product.available == false -%}
                  <span class="haya-product-card__badge" style="background: #666;">Sold Out</span>
                {%- endif -%}
              </a>

              <div class="haya-product-card__content">
                <h3 class="haya-product-card__title">{{ product.title }}</h3>

                <div class="haya-product-card__price">
                  <span class="haya-product-card__price-current">from {{ product.price | money }}</span>
                  {%- if product.compare_at_price > product.price -%}
                    <span class="haya-product-card__price-compare">{{ product.compare_at_price | money }}</span>
                  {%- endif -%}
                </div>

                {%- assign color_option = product.options_by_name.Color
                  | default: product.options_by_name.Colour
                  | default: product.options_by_name.Couleur
                  | default: product.options_by_name.couleur
                -%}
                {%- if color_option and color_option.values.size > 0 -%}
                  <div class="haya-product-card__swatches">
                    {%- for color in color_option.values limit: 6 -%}
                      {%- assign color_handle = color | handleize -%}
                      {%- case color_handle -%}
                        {%- when 'black' -%}
                          {%- assign swatch_color = '#1a1a1a' -%}
                        {%- when 'white' -%}
                          {%- assign swatch_color = '#ffffff' -%}
                        {%- when 'navy', 'navy-blue' -%}
                          {%- assign swatch_color = '#1e3a5f' -%}
                        {%- when 'grey', 'gray' -%}
                          {%- assign swatch_color = '#808080' -%}
                        {%- when 'charcoal' -%}
                          {%- assign swatch_color = '#36454f' -%}
                        {%- when 'olive', 'khaki' -%}
                          {%- assign swatch_color = '#808000' -%}
                        {%- when 'beige', 'cream', 'sand' -%}
                          {%- assign swatch_color = '#f5f5dc' -%}
                        {%- when 'pink' -%}
                          {%- assign swatch_color = '#ffc0cb' -%}
                        {%- when 'blue' -%}
                          {%- assign swatch_color = '#4169e1' -%}
                        {%- when 'red' -%}
                          {%- assign swatch_color = '#dc143c' -%}
                        {%- when 'green' -%}
                          {%- assign swatch_color = '#228b22' -%}
                        {%- when 'brown' -%}
                          {%- assign swatch_color = '#8b4513' -%}
                        {%- when 'purple' -%}
                          {%- assign swatch_color = '#800080' -%}
                        {%- when 'orange' -%}
                          {%- assign swatch_color = '#ff8c00' -%}
                        {%- when 'yellow' -%}
                          {%- assign swatch_color = '#ffd700' -%}
                        {%- when 'teal' -%}
                          {%- assign swatch_color = '#008080' -%}
                        {%- when 'burgundy', 'maroon' -%}
                          {%- assign swatch_color = '#800020' -%}
                        {%- when 'camel', 'tan', 'taupe' -%}
                          {%- assign swatch_color = '#c19a6b' -%}
                        {%- when 'rose', 'dusty-rose', 'blush' -%}
                          {%- assign swatch_color = '#d4a5a5' -%}
                        {%- when 'coral' -%}
                          {%- assign swatch_color = '#ff7f50' -%}
                        {%- when 'mint' -%}
                          {%- assign swatch_color = '#98ff98' -%}
                        {%- when 'lavender' -%}
                          {%- assign swatch_color = '#e6e6fa' -%}
                        {%- when 'noir' -%}
                          {%- assign swatch_color = '#1a1a1a' -%}
                        {%- when 'blanc' -%}
                          {%- assign swatch_color = '#ffffff' -%}
                        {%- when 'gris' -%}
                          {%- assign swatch_color = '#808080' -%}
                        {%- when 'bleu' -%}
                          {%- assign swatch_color = '#4169e1' -%}
                        {%- when 'rouge' -%}
                          {%- assign swatch_color = '#dc143c' -%}
                        {%- when 'vert' -%}
                          {%- assign swatch_color = '#228b22' -%}
                        {%- when 'rose' -%}
                          {%- assign swatch_color = '#ffc0cb' -%}
                        {%- when 'marron' -%}
                          {%- assign swatch_color = '#8b4513' -%}
                        {%- when 'bordeaux' -%}
                          {%- assign swatch_color = '#800020' -%}
                        {%- else -%}
                          {%- assign swatch_color = '#cccccc' -%}
                      {%- endcase -%}
                      <span
                        class="haya-product-card__swatch"
                        style="background: {{ swatch_color }};"
                        title="{{ color }}"
                      ></span>
                    {%- endfor -%}
                    {%- if color_option.values.size > 6 -%}
                      <span class="haya-product-card__colors-count">{{ color_option.values.size }}+ colors</span>
                    {%- elsif color_option.values.size > 1 -%}
                      <span class="haya-product-card__colors-count">{{ color_option.values.size }} colors</span>
                    {%- endif -%}
                  </div>
                {%- endif -%}

                <a href="{{ product.url }}" class="haya-product-card__button">
                  Shop Now
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>

      {%- if section.settings.show_view_all -%}
        <div class="haya-products__view-all">
          <a href="{{ section.settings.collection.url }}" class="haya-products__view-all-btn">
            Voir Tous les Produits
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              width="16"
              height="16"
            >
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="haya-products__slider-wrapper">
        <div class="haya-products__grid" id="haya-slider-{{ section.id }}">
          {%- for i in (1..4) -%}
            <div class="haya-product-card">
              <div class="haya-product-card__media">
                <span class="haya-product-card__badge">Best Seller</span>
                {{ 'product-' | append: i | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
              <div class="haya-product-card__content">
                <h3 class="haya-product-card__title">Product Title</h3>
                <div class="haya-product-card__price">
                  <span class="haya-product-card__price-current">from 349 dh</span>
                </div>
                <div class="haya-product-card__swatches">
                  <span class="haya-product-card__swatch" style="background: #1a1a1a;"></span>
                  <span class="haya-product-card__swatch" style="background: #1e3a5f;"></span>
                  <span class="haya-product-card__swatch" style="background: #d4a5a5;"></span>
                  <span class="haya-product-card__swatch" style="background: #f5f5dc;"></span>
                  <span class="haya-product-card__colors-count">4+ couleurs</span>
                </div>
                <a href="#" class="haya-product-card__button">
                  Shop Now
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12 5 19 12 12 19"></polyline>
                  </svg>
                </a>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "HAYA Featured Products",
  "tag": "section",
  "class": "section-haya-products",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Best Seller"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4,
      "label": "Desktop columns"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show view all button"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_background",
      "label": "Button hover background",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "badge_background",
      "label": "Badge background",
      "default": "#dc143c"
    },
    {
      "type": "color",
      "id": "badge_text_color",
      "label": "Badge text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "HAYA Featured Products"
    }
  ]
}
{% endschema %}
