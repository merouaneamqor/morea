{%- style -%}
  /* ==============================================
     MOREA SPORT HERO - Clean Modest Athletic
     ============================================== */
  
  .sport-hero {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    background: #faf9f7;
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .sport-hero {
      min-height: 95vh;
    }
  }

  .sport-hero__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .sport-hero__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  /* Soft gradient overlay */
  .sport-hero__media::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(45, 45, 45, 0.5) 0%,
      rgba(45, 45, 45, 0.2) 40%,
      rgba(45, 45, 45, 0.1) 60%,
      transparent 100%
    );
    pointer-events: none;
  }

  /* Additional bottom gradient for text readability */
  .sport-hero__media::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(
      to top,
      rgba(45, 45, 45, 0.6) 0%,
      transparent 100%
    );
    pointer-events: none;
    z-index: 1;
  }

  .sport-hero__content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
    padding: 3rem 2rem;
    max-width: 900px;
    width: 100%;
  }

  @media screen and (min-width: 750px) {
    .sport-hero__content {
      padding: 5rem 4rem;
    }
  }

  @media screen and (min-width: 990px) {
    .sport-hero__content {
      padding: 6rem;
    }
  }

  /* Eyebrow/Label - Small caps */
  .sport-hero__label {
    font-family: var(--font-body-family);
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: #ffffff;
    opacity: 0.9;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .sport-hero__label::before {
    content: '';
    width: 24px;
    height: 2px;
    background: #d4a5a5;
  }

  /* Main Headline - Giant Bold Caps */
  .sport-hero__heading {
    font-family: 'Bebas Neue', 'Impact', 'Arial Black', sans-serif;
    font-size: clamp(4.5rem, 14vw, 12rem);
    font-weight: 400;
    line-height: 0.9;
    letter-spacing: 0.02em;
    color: #ffffff;
    margin: 0 0 2rem;
    text-transform: uppercase;
  }

  @media screen and (min-width: 750px) {
    .sport-hero__heading {
      font-size: clamp(6rem, 12vw, 14rem);
    }
  }

  /* Subheading */
  .sport-hero__subheading {
    font-family: var(--font-body-family);
    font-size: 1.5rem;
    font-weight: 400;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 2.5rem;
    max-width: 500px;
  }

  /* CTA Button - Clean rounded */
  .sport-hero__button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    background: #ffffff;
    color: #2d2d2d;
    padding: 1.4rem 2.8rem;
    border: none;
    border-radius: 4px;
    font-family: var(--font-body-family);
    font-size: 1.4rem;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.25s ease;
    position: relative;
    overflow: hidden;
  }

  .sport-hero__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: #d4a5a5;
    transition: left 0.3s ease;
    z-index: 0;
  }

  .sport-hero__button:hover::before {
    left: 0;
  }

  .sport-hero__button span,
  .sport-hero__button i {
    position: relative;
    z-index: 1;
    transition: color 0.3s ease;
  }

  .sport-hero__button:hover {
    color: #ffffff;
  }

  .sport-hero__button:hover span,
  .sport-hero__button:hover i {
    color: #ffffff;
  }

  .sport-hero__button i {
    font-size: 1.6rem;
    transition: transform 0.3s ease, color 0.3s ease;
  }

  .sport-hero__button:hover i {
    transform: translateX(5px);
  }

  /* Secondary button style */
  .sport-hero__button--secondary {
    background: transparent;
    color: #ffffff;
    border: 2px solid #ffffff;
    margin-left: 1rem;
  }

  .sport-hero__button--secondary::before {
    background: #ffffff;
  }

  .sport-hero__button--secondary:hover {
    color: #2d2d2d;
  }

  /* Button group */
  .sport-hero__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  /* Diagonal accent element - Rose/blush color */
  .sport-hero__accent {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 40%;
    height: 100%;
    background: #d4a5a5;
    clip-path: polygon(100% 0, 100% 100%, 0 100%);
    opacity: 0.15;
    z-index: 1;
    pointer-events: none;
  }

  /* Scroll indicator */
  .sport-hero__scroll {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    font-size: 1rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    z-index: 2;
  }

  .sport-hero__scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.6), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { transform: scaleY(1); opacity: 1; }
    50% { transform: scaleY(0.6); opacity: 0.5; }
  }

  @media screen and (max-width: 749px) {
    .sport-hero__scroll {
      display: none;
    }
  }
{%- endstyle -%}

<section class="sport-hero{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="sport-hero__media">
    {%- if section.settings.image != blank -%}
      {{
        section.settings.image
        | image_url: width: 2000
        | image_tag: sizes: '100vw', widths: '375, 550, 750, 1100, 1500, 2000', fetchpriority: 'high'
      }}
    {%- else -%}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>

  <!-- Diagonal accent -->
  <div class="sport-hero__accent"></div>

  <div class="sport-hero__content page-width">
    {%- if section.settings.label != blank -%}
      <p class="sport-hero__label">{{ section.settings.label }}</p>
    {%- endif -%}

    <h1 class="sport-hero__heading">
      {{ section.settings.heading | newline_to_br }}
    </h1>

    <div class="sport-hero__buttons">
      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="sport-hero__button">
          <span>{{ section.settings.button_label }}</span>
          <i class="fa-solid fa-arrow-right"></i>
        </a>
      {%- endif -%}
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="sport-hero__scroll">
    <span>Scroll</span>
    <div class="sport-hero__scroll-line"></div>
  </div>
</section>

