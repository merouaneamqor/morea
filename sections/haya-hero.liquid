{%- style -%}
  .haya-hero {
    position: relative;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.background_color }};
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .haya-hero {
      min-height: 90vh;
    }
  }

  .haya-hero__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .haya-hero__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  .haya-hero__media::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.2) 50%,
      rgba(0, 0, 0, 0.4) 100%
    );
    pointer-events: none;
  }

  .haya-hero__content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem;
    max-width: 900px;
  }

  @media screen and (min-width: 750px) {
    .haya-hero__content {
      padding: 3rem;
    }
  }

  .haya-hero__heading {
    font-family: var(--font-heading-family);
    font-size: clamp(4rem, 12vw, 9rem);
    font-weight: 400;
    line-height: 1;
    letter-spacing: -0.02em;
    color: {{ section.settings.text_color }};
    margin: 0 0 2rem;
    text-transform: lowercase;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
  }

  @media screen and (min-width: 750px) {
    .haya-hero__heading {
      font-size: clamp(5rem, 10vw, 10rem);
    }
  }

  .haya-hero__button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    padding: 1.2rem 2.4rem;
    border-radius: 50px;
    font-size: 1.4rem;
    font-weight: 600;
    text-decoration: none;
    text-transform: none;
    letter-spacing: 0.02em;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .haya-hero__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .haya-hero__button svg {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
  }

  .haya-hero__button:hover svg {
    transform: translateX(4px);
  }

  .haya-hero__label {
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    margin-bottom: 1rem;
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.2);
  }
{%- endstyle -%}

<section class="haya-hero{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
  <div class="haya-hero__media">
    {%- if section.settings.image != blank -%}
      {{
        section.settings.image
        | image_url: width: 2000
        | image_tag: sizes: '100vw', widths: '375, 550, 750, 1100, 1500, 2000', fetchpriority: 'high'
      }}
    {%- else -%}
      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>

  <div class="haya-hero__content">
    {%- if section.settings.label != blank -%}
      <p class="haya-hero__label">{{ section.settings.label }}</p>
    {%- endif -%}

    <h1 class="haya-hero__heading">
      {{ section.settings.heading | newline_to_br }}
    </h1>

    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="haya-hero__button">
        {{ section.settings.button_label }}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "HAYA Hero",
  "tag": "section",
  "class": "section-haya-hero",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Our Featured"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "performance can too."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Activewear"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#e8e4df"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#1a1a1a"
    }
  ],
  "presets": [
    {
      "name": "HAYA Hero"
    }
  ]
}
{% endschema %}
