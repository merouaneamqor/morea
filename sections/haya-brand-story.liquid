{%- style -%}
  .haya-brand-story {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  .haya-brand-story__container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  @media screen and (min-width: 990px) {
    .haya-brand-story__container {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: center;
    }

    .haya-brand-story--image-first .haya-brand-story__content {
      order: 2;
    }

    .haya-brand-story--image-first .haya-brand-story__media {
      order: 1;
    }
  }

  .haya-brand-story__content {
    display: flex;
    flex-direction: column;
    text-align: {{ section.settings.text_alignment }};
  }

  @media screen and (min-width: 990px) {
    .haya-brand-story__content {
      padding: 2rem 0;
    }
  }

  .haya-brand-story__heading {
    font-family: var(--font-heading-family);
    font-size: clamp(2.4rem, 5vw, 3.6rem);
    font-weight: 700;
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: {{ section.settings.text_color }};
    margin: 0 0 1.5rem;
  }

  .haya-brand-story__text {
    font-size: 1.5rem;
    line-height: 1.8;
    color: {{ section.settings.text_color }};
    opacity: 0.75;
    margin: 0 0 2rem;
  }

  .haya-brand-story__text p {
    margin: 0 0 1rem;
  }

  .haya-brand-story__text p:last-child {
    margin-bottom: 0;
  }

  .haya-brand-story__text em {
    font-style: italic;
    opacity: 0.8;
  }

  .haya-brand-story__button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    padding: 1.2rem 2.4rem;
    border-radius: 50px;
    font-size: 1.4rem;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    width: fit-content;
    margin-top: 0.5rem;
    {%- if section.settings.text_alignment == 'center' -%}
    margin-left: auto;
    margin-right: auto;
    {%- endif -%}
  }

  .haya-brand-story__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }

  .haya-brand-story__button svg {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
  }

  .haya-brand-story__button:hover svg {
    transform: translateX(4px);
  }

  .haya-brand-story__media {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 4/5;
  }

  @media screen and (min-width: 750px) {
    .haya-brand-story__media {
      aspect-ratio: 3/4;
    }
  }

  @media screen and (min-width: 990px) {
    .haya-brand-story__media {
      aspect-ratio: 1/1;
    }
  }

  .haya-brand-story__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
{%- endstyle -%}

<section class="haya-brand-story{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="haya-brand-story__container{% if section.settings.image_position == 'first' %} haya-brand-story--image-first{% endif %}">
    <div class="haya-brand-story__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="haya-brand-story__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}

      {%- if section.settings.text != blank -%}
        <div class="haya-brand-story__text rte">{{ section.settings.text }}</div>
      {%- endif -%}

      {%- if section.settings.button_label != blank -%}
        <a href="{{ section.settings.button_link }}" class="haya-brand-story__button">
          {{ section.settings.button_label }}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      {%- endif -%}
    </div>

    <div class="haya-brand-story__media">
      {%- if section.settings.image != blank -%}
        {{
          section.settings.image
          | image_url: width: 1200
          | image_tag: sizes: '(min-width: 990px) 50vw, 100vw', widths: '375, 550, 750, 1000, 1200'
        }}
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "HAYA Brand Story",
  "tag": "section",
  "class": "section-haya-brand-story",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "No more makeshift activewear."
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Finally, we made apparel with all your needs in mind <em>(someone had to)</em>.</p><p>From functionality & fabric selection, to balancing performance with style.</p><p>No more compromise.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Activewear"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "first",
          "label": "Left"
        },
        {
          "value": "last",
          "label": "Right"
        }
      ],
      "default": "last"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "HAYA Brand Story"
    }
  ]
}
{% endschema %}
