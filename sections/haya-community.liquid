{%- style -%}
  .haya-community {
    display: grid;
    grid-template-columns: 1fr;
    background: {{ section.settings.background_color }};
    min-height: 500px;
  }

  @media screen and (min-width: 750px) {
    .haya-community {
      grid-template-columns: 1fr 1fr;
      min-height: 600px;
    }
  }

  .haya-community__media {
    position: relative;
    min-height: 350px;
    overflow: hidden;
    order: 1;
  }

  @media screen and (min-width: 750px) {
    .haya-community__media {
      min-height: 100%;
      order: {{ section.settings.image_position }};
    }
  }

  .haya-community__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .haya-community__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 4rem 2rem;
    order: 2;
  }

  @media screen and (min-width: 750px) {
    .haya-community__content {
      padding: 5rem 4rem;
      order: {{ section.settings.content_position }};
    }
  }

  @media screen and (min-width: 990px) {
    .haya-community__content {
      padding: 6rem 5rem;
    }
  }

  .haya-community__title {
    font-family: var(--font-heading-family);
    font-size: clamp(2.4rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    color: {{ section.settings.text_color }};
    margin: 0 0 1.5rem;
  }

  .haya-community__text {
    font-size: 1.5rem;
    line-height: 1.7;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    margin: 0 0 2rem;
  }

  .haya-community__button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    padding: 1.2rem 2.4rem;
    border-radius: 50px;
    font-size: 1.4rem;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    width: fit-content;
  }

  .haya-community__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  }
{%- endstyle -%}

<section class="haya-community{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  <div class="haya-community__media">
    {%- if section.settings.image != blank -%}
      {{
        section.settings.image
        | image_url: width: 1200
        | image_tag:
          sizes: '(min-width: 750px) 50vw, 100vw',
          widths: '375, 550, 750, 1000, 1200'
      }}
    {%- else -%}
      {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {%- endif -%}
  </div>
  
  <div class="haya-community__content">
    {%- if section.settings.title != blank -%}
      <h2 class="haya-community__title">{{ section.settings.title }}</h2>
    {%- endif -%}
    
    {%- if section.settings.text != blank -%}
      <div class="haya-community__text rte">{{ section.settings.text }}</div>
    {%- endif -%}
    
    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="haya-community__button">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "HAYA Community",
  "tag": "section",
  "class": "section-haya-community",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Morea Athletes"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>A community of athletes with strong values. Here to support & inspire each other through fitness.</p><p>Everyday we show the world you don't need to compromise your values to achieve your goals.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Join The Community"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position (desktop)",
      "options": [
        {
          "value": "1",
          "label": "Left"
        },
        {
          "value": "2",
          "label": "Right"
        }
      ],
      "default": "1"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#e8e4df"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "HAYA Community"
    }
  ]
}
{% endschema %}

