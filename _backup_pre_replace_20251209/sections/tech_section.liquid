{% doc %}
  Product Tech Section Block

  A technical section explaining material advantages with
  educational content about polyamide and performance benefits.
{% enddoc %}

{% assign tech_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .tech-section-{{ tech_id }} {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding }}px 20px;
    position: relative;
    overflow: hidden;
  }

  {% if section.settings.background_pattern %}
    .tech-section-{{ tech_id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: radial-gradient(circle at 25% 25%, {{ section.settings.pattern_color }} 1px, transparent 1px);
      background-size: 20px 20px;
      opacity: 0.03;
      z-index: 1;
    }
  {% endif %}

  .tech-container-{{ tech_id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .tech-header-{{ tech_id }} {
    text-align: center;
    margin-bottom: {{ section.settings.section_spacing }}px;
  }

  .tech-title-{{ tech_id }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
    line-height: 1.3;
  }

  .tech-subtitle-{{ tech_id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
    line-height: 1.6;
    max-width: 800px;
    margin: 0 auto;
  }

  .tech-content-{{ tech_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.grid_gap }}px;
    margin-bottom: {{ section.settings.section_spacing }}px;
  }

  .tech-text-block-{{ tech_id }} {
    background: {{ section.settings.text_bg }};
    padding: {{ section.settings.text_padding }}px;
    border-radius: {{ section.settings.border_radius }}px;
    border: 1px solid {{ section.settings.text_border }};
  }

  .tech-material-title-{{ tech_id }} {
    font-size: {{ section.settings.material_title_size }}px;
    font-weight: {{ section.settings.material_title_weight }};
    color: {{ section.settings.material_title_color }};
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
    line-height: 1.4;
  }

  .tech-material-content-{{ tech_id }} {
    font-size: {{ section.settings.material_content_size }}px;
    color: {{ section.settings.material_content_color }};
    line-height: 1.7;
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
  }

  .tech-material-highlight-{{ tech_id }} {
    font-size: {{ section.settings.material_highlight_size }}px;
    color: {{ section.settings.material_highlight_color }};
    line-height: 1.6;
    margin: 0;
    font-style: italic;
  }

  .tech-visual-{{ tech_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.visual_bg }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.visual_padding }}px;
    min-height: 300px;
    position: relative;
    overflow: hidden;
  }

  .tech-visual-{{ tech_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, {{ section.settings.visual_gradient_start }}, {{ section.settings.visual_gradient_end }});
    opacity: 0.1;
    z-index: 1;
  }

  .tech-visual-content-{{ tech_id }} {
    position: relative;
    z-index: 2;
    text-align: center;
  }

  .tech-visual-icon-{{ tech_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    margin: 0 auto {{ section.settings.content_spacing }}px;
    color: {{ section.settings.icon_color }};
    opacity: 0.8;
  }

  .tech-visual-text-{{ tech_id }} {
    font-size: {{ section.settings.visual_text_size }}px;
    color: {{ section.settings.visual_text_color }};
    font-weight: 500;
    margin: 0;
  }

  .tech-edge-breakdown-{{ tech_id }} {
    background: {{ section.settings.breakdown_bg }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.breakdown_padding }}px;
  }

  .tech-breakdown-title-{{ tech_id }} {
    font-size: {{ section.settings.breakdown_title_size }}px;
    font-weight: {{ section.settings.breakdown_title_weight }};
    color: {{ section.settings.breakdown_title_color }};
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
    text-align: center;
  }

  .tech-breakdown-grid-{{ tech_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: {{ section.settings.breakdown_gap }}px;
  }

  .tech-breakdown-item-{{ tech_id }} {
    background: {{ section.settings.breakdown_item_bg }};
    padding: {{ section.settings.breakdown_item_padding }}px;
    border-radius: 8px;
    border-left: 4px solid {{ section.settings.breakdown_accent }};
    transition: transform 0.3s ease;
  }

  .tech-breakdown-item-{{ tech_id }}:hover {
    transform: translateY(-2px);
  }

  .tech-breakdown-item-title-{{ tech_id }} {
    font-size: {{ section.settings.breakdown_item_title_size }}px;
    font-weight: {{ section.settings.breakdown_item_title_weight }};
    color: {{ section.settings.breakdown_item_title_color }};
    margin: 0 0 8px 0;
  }

  .tech-breakdown-item-text-{{ tech_id }} {
    font-size: {{ section.settings.breakdown_item_text_size }}px;
    color: {{ section.settings.breakdown_item_text_color }};
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .tech-content-{{ tech_id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.grid_gap | times: 0.5 }}px;
    }

    .tech-section-{{ tech_id }} {
      padding: {{ section.settings.padding | times: 0.8 }}px 20px;
    }

    .tech-breakdown-grid-{{ tech_id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.breakdown_gap | times: 0.5 }}px;
    }

    .tech-visual-{{ tech_id }} {
      min-height: 250px;
    }

    .tech-title-{{ tech_id }} {
      font-size: {{ section.settings.title_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="tech-section-{{ tech_id }}" >
  <div class="tech-container-{{ tech_id }}">
    <div class="tech-header-{{ tech_id }}">
      {% if section.settings.title != blank %}
        <h2 class="tech-title-{{ tech_id }}">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="tech-subtitle-{{ tech_id }}">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="tech-content-{{ tech_id }}">
      <div class="tech-text-block-{{ tech_id }}">
        {% if section.settings.material_title != blank %}
          <h3 class="tech-material-title-{{ tech_id }}">{{ section.settings.material_title }}</h3>
        {% endif %}

        {% if section.settings.material_content != blank %}
          <div class="tech-material-content-{{ tech_id }}">{{ section.settings.material_content }}</div>
        {% endif %}

        {% if section.settings.material_highlight != blank %}
          <p class="tech-material-highlight-{{ tech_id }}">{{ section.settings.material_highlight }}</p>
        {% endif %}
      </div>

      <div class="tech-visual-{{ tech_id }}">
        <div class="tech-visual-content-{{ tech_id }}">
          <svg class="tech-visual-icon-{{ tech_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14.7 6.3a1 1 0 0 0-1.4 0l-4 4a1 1 0 0 0 0 1.4l4 4a1 1 0 0 0 1.4-1.4L11.42 11H19a1 1 0 1 0 0-2h-7.58l3.3-3.3a1 1 0 0 0 0-1.4Z"/>
            <path d="M9.3 17.7a1 1 0 0 0 1.4 0l4-4a1 1 0 0 0 0-1.4l-4-4a1 1 0 0 0-1.4 1.4L12.58 13H5a1 1 0 1 0 0 2h7.58l-3.3 3.3a1 1 0 0 0 0 1.4Z"/>
          </svg>
          <p class="tech-visual-text-{{ tech_id }}">Polyamide Molecule Structure</p>
        </div>
      </div>
    </div>

    <div class="tech-edge-breakdown-{{ tech_id }}">
      {% if section.settings.breakdown_title != blank %}
        <h3 class="tech-breakdown-title-{{ tech_id }}">{{ section.settings.breakdown_title }}</h3>
      {% endif %}

      <div class="tech-breakdown-grid-{{ tech_id }}">
        {% for edge in section.settings.edges %}
          <div class="tech-breakdown-item-{{ tech_id }}">
            {% if edge.title != blank %}
              <h4 class="tech-breakdown-item-title-{{ tech_id }}">{{ edge.title }}</h4>
            {% endif %}

            {% if edge.description != blank %}
              <p class="tech-breakdown-item-text-{{ tech_id }}">{{ edge.description }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

