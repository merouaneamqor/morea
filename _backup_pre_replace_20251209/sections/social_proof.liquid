{% doc %}
  Social Proof Section Block

  A testimonials section with customer quotes
  and social proof elements for conversion.
{% enddoc %}

{% assign social_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .social-proof-{{ social_id }} {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding }}px 20px;
    position: relative;
    overflow: hidden;
  }

  {% if section.settings.background_pattern %}
    .social-proof-{{ social_id }}::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: radial-gradient(circle at 25% 75%, {{ section.settings.pattern_color }} 1px, transparent 1px);
      background-size: 25px 25px;
      opacity: 0.03;
      z-index: 1;
    }
  {% endif %}

  .social-container-{{ social_id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .social-header-{{ social_id }} {
    text-align: center;
    margin-bottom: {{ section.settings.section_spacing }}px;
  }

  .social-title-{{ social_id }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
    line-height: 1.3;
  }

  .social-subtitle-{{ social_id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin: 0;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .social-testimonials-{{ social_id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    margin-bottom: {{ section.settings.section_spacing }}px;
  }

  .social-testimonial-{{ social_id }} {
    background: {{ section.settings.testimonial_bg }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.testimonial_padding }}px;
    border: 1px solid {{ section.settings.testimonial_border }};
    position: relative;
    transition: all 0.3s ease;
  }

  .social-testimonial-{{ social_id }}:hover {
    transform: translateY(-{{ section.settings.testimonial_hover_lift }}px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
  }

  .testimonial-quote-{{ social_id }} {
    font-size: {{ section.settings.quote_size }}px;
    color: {{ section.settings.quote_color }};
    line-height: 1.6;
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
    font-style: italic;
    position: relative;
  }

  .testimonial-quote-{{ social_id }}::before {
    content: '"';
    font-size: 2em;
    color: {{ section.settings.quote_mark_color }};
    position: absolute;
    top: -5px;
    left: -10px;
    line-height: 1;
  }

  .testimonial-author-{{ social_id }} {
    display: flex;
    align-items: center;
    gap: {{ section.settings.content_spacing }}px;
    padding-top: {{ section.settings.content_spacing }}px;
    border-top: 1px solid {{ section.settings.divider_color }};
  }

  .testimonial-avatar-{{ social_id }} {
    width: {{ section.settings.avatar_size }}px;
    height: {{ section.settings.avatar_size }}px;
    border-radius: 50%;
    background: {{ section.settings.avatar_bg }};
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.avatar_color }};
    font-weight: 600;
    font-size: {{ section.settings.avatar_size | times: 0.3 | round }}px;
    flex-shrink: 0;
  }

  .testimonial-author-info-{{ social_id }} {
    flex: 1;
  }

  .testimonial-author-name-{{ social_id }} {
    font-size: {{ section.settings.author_name_size }}px;
    font-weight: {{ section.settings.author_name_weight }};
    color: {{ section.settings.author_name_color }};
    margin: 0 0 2px 0;
    line-height: 1.2;
  }

  .testimonial-author-title-{{ social_id }} {
    font-size: {{ section.settings.author_title_size }}px;
    color: {{ section.settings.author_title_color }};
    margin: 0;
    line-height: 1.2;
    font-style: italic;
  }

  .social-stats-{{ social_id }} {
    background: {{ section.settings.stats_bg }};
    border-radius: {{ section.settings.border_radius }}px;
    padding: {{ section.settings.stats_padding }}px;
    text-align: center;
  }

  .social-stats-title-{{ social_id }} {
    font-size: {{ section.settings.stats_title_size }}px;
    font-weight: {{ section.settings.stats_title_weight }};
    color: {{ section.settings.stats_title_color }};
    margin: 0 0 {{ section.settings.content_spacing }}px 0;
  }

  .social-stats-grid-{{ social_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: {{ section.settings.stats_gap }}px;
  }

  .social-stat-item-{{ social_id }} {
    background: {{ section.settings.stat_bg }};
    padding: {{ section.settings.stat_padding }}px;
    border-radius: 8px;
    border: 1px solid {{ section.settings.stat_border }};
  }

  .stat-number-{{ social_id }} {
    font-size: {{ section.settings.stat_number_size }}px;
    font-weight: {{ section.settings.stat_number_weight }};
    color: {{ section.settings.stat_number_color }};
    margin: 0 0 4px 0;
    line-height: 1.2;
  }

  .stat-label-{{ social_id }} {
    font-size: {{ section.settings.stat_label_size }}px;
    color: {{ section.settings.stat_label_color }};
    margin: 0;
    line-height: 1.3;
  }

  @media screen and (max-width: 749px) {
    .social-testimonials-{{ social_id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.grid_gap | times: 0.5 }}px;
    }

    .social-proof-{{ social_id }} {
      padding: {{ section.settings.padding | times: 0.8 }}px 20px;
    }

    .social-title-{{ social_id }} {
      font-size: {{ section.settings.title_size | times: 0.9 }}px;
    }

    .testimonial-quote-{{ social_id }} {
      font-size: {{ section.settings.quote_size | times: 0.9 }}px;
    }

    .social-stats-grid-{{ social_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ section.settings.stats_gap | times: 0.5 }}px;
    }
  }
{% endstyle %}

<div class="social-proof-{{ social_id }}" >
  <div class="social-container-{{ social_id }}">
    <div class="social-header-{{ social_id }}">
      {% if section.settings.title != blank %}
        <h2 class="social-title-{{ social_id }}">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.subtitle != blank %}
        <p class="social-subtitle-{{ social_id }}">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="social-testimonials-{{ social_id }}">
      {% for testimonial in section.settings.testimonials %}
        <div class="social-testimonial-{{ social_id }}">
          {% if testimonial.quote != blank %}
            <blockquote class="testimonial-quote-{{ social_id }}">{{ testimonial.quote }}</blockquote>
          {% endif %}

          <div class="testimonial-author-{{ social_id }}">
            <div class="testimonial-avatar-{{ social_id }}">
              {% if testimonial.initials %}
                {{ testimonial.initials }}
              {% else %}
                {{ testimonial.name | slice: 0, 1 | upcase }}
              {% endif %}
            </div>

            <div class="testimonial-author-info-{{ social_id }}">
              {% if testimonial.name != blank %}
                <h4 class="testimonial-author-name-{{ social_id }}">{{ testimonial.name }}</h4>
              {% endif %}

              {% if testimonial.title != blank %}
                <p class="testimonial-author-title-{{ social_id }}">{{ testimonial.title }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="social-stats-{{ social_id }}">
      {% if section.settings.stats_title != blank %}
        <h3 class="social-stats-title-{{ social_id }}">{{ section.settings.stats_title }}</h3>
      {% endif %}

      <div class="social-stats-grid-{{ social_id }}">
        {% for stat in section.settings.stats %}
          <div class="social-stat-item-{{ social_id }}">
            {% if stat.number != blank %}
              <div class="stat-number-{{ social_id }}">{{ stat.number }}</div>
            {% endif %}

            {% if stat.label != blank %}
              <div class="stat-label-{{ social_id }}">{{ stat.label }}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

